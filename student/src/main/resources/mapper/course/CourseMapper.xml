<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bob.course.mapper.CourseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bob.course.domain.Course">
        <id column="id" property="id" />
        <result column="course_name" property="courseName" />
        <result column="course_addr" property="courseAddr" />
        <result column="course_img" property="courseImg" />
        <result column="course_info" property="courseInfo" />
        <result column="course_time" property="courseTime" />
        <result column="teacher_id" property="teacherId" />
        <result column="course_state" property="courseState" />
        <result column="revision" property="revision" />
        <result column="created_by" property="createdBy" />
        <result column="created_time" property="createdTime" />
        <result column="updated_by" property="updatedBy" />
        <result column="updated_time" property="updatedTime" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_name, course_addr, course_img, course_info, course_time, teacher_id, course_state, revision, created_by, created_time, updated_by, updated_time, del_flag
    </sql>

</mapper>
